generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id_user    Int        @id @default(autoincrement())
  username   String     @unique
  email      String     @unique
  password   String
  token      String?    @unique
  created_at DateTime   @default(now())
  image_url  String
  comment    Comments[]
  video      Videos[]
}

model Videos {
  id_video    Int        @id @default(autoincrement())
  title_video String
  channel     String
  slug        String
  thumbnail   String
  quality     String
  views       Int
  likes       Int
  created_at  DateTime   @default(now())
  id_user     Int
  comments    Comments[]
  user        Users      @relation(fields: [id_user], references: [id_user])
}

model Comments {
  id_comment Int      @id @default(autoincrement())
  body       String
  created_at DateTime @default(now())
  id_user    Int
  id_video   Int
  user       Users    @relation(fields: [id_user], references: [id_user])
  video      Videos   @relation(fields: [id_video], references: [id_video])
}
